  %body

    #header
      .top
        #logo
          %span.image.avatar48
            %img{src: "images/avatar.jpg", alt: ""}
          %h1#title Bruno MEDICI
          %p Consultant ind√©pendant


        %nav#nav
          %ul
            %li
              %a#top-link.skel-layers-ignoreHref{href: "/#top"}
                %span.icon.fa-home top
            %li
              %a#portfolio-link.skel-layers-ignoreHref{href: "/#portfolio"}
                %span.icon.fa-th portfolio
            %li
              %a#about-link.skel-layers-ignoreHref{href: "/#about"}
                %span.icon.fa-user about
            %li
              %a#contact-link.skel-layers-ignoreHref{href: "/#contact"}
                %span.icon.fa-envelope contact

            %li
              %a#cv-link.skel-layers-ignoreHref{href: "/cv.html"}
                %span.icon.fa-envelope CV

      .bottom
        %ul.icons
          %li
            %a.icon.fa-twitter{href: "#"}
              %span.label Twitter
          %li
            %a.icon.fa-facebook{href: "#"}
              %span.label facebook
          %li
            %a.icon.fa-github{href: "#"}
              %span.label github
          %li
            %a.icon.fa-envelope{href: "#"}
              %span.label email



    #main

      = yield


    #footer
      %ul.copyright
        %li &copy; Bruno MEDICI Consultant
        %li All rights reserved
