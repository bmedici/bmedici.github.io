.laquo {
  background: url(<%= asset_path(:images, 'laquo.png') %>) no-repeat;
  width: 14px;
  height: 11px;
  left: 0;
  position: relative;
  top: -6px;
  margin: 0 6px;
  display: inline-block;
}

.raquo {
  background: url(<%= asset_path(:images, 'raquo.png') %>) no-repeat;
  width: 13px;
  height: 15px;
  display: inline-block;
  position: relative;
  top: 10px;
  margin: 0 2px;
}

.block {
  width: 280px;
  padding: 20px 25px;
  margin-right: 20px;
  margin-bottom: 20px;
  border: 1px solid silver;
  display: inline-block;
}

